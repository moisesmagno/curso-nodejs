{% extends "_layouts/auth.njk" %}

{% block body %}

    <form action="/signup" method="POST">

        <label for="avatar">
            <img src="/images/avatar.svg" alt="" height="24">
        </label>

        <input type="file" name="avatar" id="avatar">

        <input type="text" name="name" placeholder="Nome completo">
        <input type="email" name="email" placeholder="E-mail">
        <input type="password" name="password" placeholder="Senha Secreta">

        <label for="provider">
            <input type="checkbox" id="provider" name="provider" value="1">
            Sou cabelereiro
        </label>

        <button type="submit">Cadastrar</button>

        <a href="/">JÃ¡ possuo uma conta.</a>

    </form>

    <script type="text/javascript">
        var avatarInput = document.getElementById('avatar');
        var img = document.querySelector('label[for=avatar] img');

        avatarInput.onchange = (e) => {
            img.classList.add('preview');
            img.src = URL.createObjectURL(e.target.files[0]);
        }
    </script>

{% endblock %}
